<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="50dp"
        android:background="@drawable/bottomsheet_background"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="50dp"
            android:layout_height="5dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/bottomsheet_stick_background"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/josefinsans_bold"
            android:text="Help us to Improve"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:autoSizeTextType="none"
            android:background="@drawable/et_background"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:fontFamily="@font/josefinsans_bold"
            android:hint="Developer Mahesh"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:paddingStart="14dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:autoSizeTextType="none"
            android:background="@drawable/et_background"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:fontFamily="@font/josefinsans_bold"
            android:hint="Enter Your Suggestion or Message here"
            android:inputType="textLongMessage"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/mbtn_background"

            android:fontFamily="@font/josefinsans_bold"
            android:text="Submit"
            android:textAllCaps="false"

            android:textColor="@color/white"

            android:textSize="18sp"

            />


    </LinearLayout>

</ScrollView>