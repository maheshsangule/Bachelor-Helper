<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00426088"
    android:gravity="end">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="@+id/mNote"
        app:layout_constraintEnd_toStartOf="@+id/mNote"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mNote"
        app:layout_constraintVertical_bias="0.461"
        app:shapeAppearanceOverlay="@style/CircleShape"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="3dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="@drawable/notes_item_background"
        android:fontFamily="@font/josefinsans_bold"
        android:padding="12dp"

        android:text="Hi Mahesh"

        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


