<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="ActionBarFont">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>

    </style>


    <style name="CustomAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@color/gray</item>
        <item name="android:windowBackground">@color/gray</item>

    </style>

    <style name="ChipNavigationBarText" parent="ChipNavigationBarText" tools:ignore="ResourceCycle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/madmione</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Model</item>
    </style>

    <style name="Model" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_back</item>
        <item name="android:layout_margin">15dp</item>
        <!--        <item name="a">@drawable/bottom_sheet_back</item>-->
    </style>

    <style name="CircleShape" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">

        <item name="android:textColorHint">#BF426088</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableEnd">@drawable/ic_mike</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorPrimary</item>

    </style>


    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <!-- Define your text appearance attributes here -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add more attributes as needed -->
    </style>

    <style name="SplashScreen" parent="Theme.Material3.Light.NoActionBar">
        <!-- Define your text appearance attributes here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <!--        <item name="android:textCursorDrawable">@color/colorPrimary</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary50</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Add more attributes as needed -->
    </style>

</resources>